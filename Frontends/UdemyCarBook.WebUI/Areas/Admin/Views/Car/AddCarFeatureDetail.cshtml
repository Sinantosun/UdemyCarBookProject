@model List<ResultCarFeatureByCarIdDto>
@{
    ViewData["Title"] = "AddCarFeatureDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Aracın Özellikleri</h4>
            <p class="card-subtitle mb-4">Aşağıda bütün araç özellikleri ve araç özelliği eklemek istediğiniz arabanın bulunan özellikleri işarli olarak gelmektedir. Özellik ekleme işlemi için özelliğin yanında bulunan kutucukları işaretleyiniz. Özellik kaldırma için ise kutucukları boş bırakınız (Dipnot : en az 1-2 özellik bulundurunuz.)</p>
           <form method="post">
            @for (int i = 0; i < Model.Count; i++)
            {

                <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].CarId" />
                        <input type="hidden" asp-for="@Model[i].FeatureId" />
                    <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
                    <label class="form-check-label" for="@Model[i].Available">@Model[i].FeatureName</label>
                </div>

            }
            <br />
            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
            </form>

        </div>
    </div>

</div>

