@model ResultAboutByIdDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımızda Güncelleme</h4>
                <p class="card-subtitle mb-4">Hakkımızda ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra güncelle butonuna tıklayarak işlemi tamamlayabilirsiniz</p>
                <form method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="AboutId">
                        <label for="exampleInputModel">Başlık</label>
                        <input type="text" class="form-control" id="exampleInputModel" asp-for="Title" placeholder="Başlığı yazınız">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputModel">Açıklama</label>
                        <input type="text" class="form-control" id="exampleInputModel" asp-for="Description" placeholder="Açıklama Yazınız">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputModel">Görsel</label>
                        <input type="text" class="form-control" id="exampleInputModel" asp-for="ImageUrl" placeholder="Görsel Linki">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Bannerı güncelle</button>
                </form>

            </div>
        </div>

    </div>

</div>





