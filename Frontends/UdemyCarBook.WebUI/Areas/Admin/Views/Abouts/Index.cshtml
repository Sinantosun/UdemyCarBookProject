@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımızda Alanı</h4>
                <p class="card-subtitle mb-4">
                    Hakkımızda alanında bulunan bilgileri aşağıdan düzenliyebilirsiniz.Tema bütünlüğü için bu alanda lütfen bir adet veri kaydı bulundurunuz. Aksi durumlarda tema bütünlüğü bozulacaktır.
                </p>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
      
                                <th>Görsel</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th colspan="2" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                   
                                <tr>
               
                                    <td><img src="@item.ImageUrl" style="width:200px;height:200px" /></td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td style="width:100px"><button onclick="DeleteAbout(@item.AboutId)" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</button></td>
                                    <td style="width:150px"><a href="/Admin/Abouts/UpdateAbout/@item.AboutId" class="btn btn-outline-success"> <i class="fa fa-edit"></i>  Güncelle</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Admin/Abouts/CreateAbout" class="btn btn-outline-primary"><i class="fa fa-pen"></i> Ekle</a>
                </div>
            </div>
            <!-- end Aboutd-body-->
        </div>
        <!-- end Aboutd -->

    </div>

</div>

<script>
    function DeleteAbout(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            html: "Hakkımızda Kaydını Silmek İstediğinizden Emninmisiniz?<br><br><small><b>Bu işlem geri alınamaz</b></small>",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Abouts/RemoveAbout/" + id;
            }
        });

    }
</script>






