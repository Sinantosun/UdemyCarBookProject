@model List<ResultFooterAddressDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">İletişim ve Footer Alanı Adres Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            İletişim ve Footer kısımlarında yer alan adres bilgilerine ait işlemleri bu sayfadan gerçekleştirebilirsiniz. Harita bilgisini lokasyon değeri olarak Google Map üzerinden alabilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Adres</th>
                                        <th>Telefon</th>
                                        <th>E-Mail</th>
                                        <th>Açıklama</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Adress</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>
                                            <td>@item.Description</td>
                                            <td><button onclick="DeleteFooterAddress(@item.FooterAddressId)" class="btn btn-outline-danger"> <i class="fa fa-trash"></i> Sil</button></td>
                                            <td><a href="/Admin/FooterAddress/UpdateFooterAddress/@item.FooterAddressId" class="btn btn-outline-success">  <i class="fa fa-ed"></i> Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/FooterAddress/CreateFooterAddress" class="btn btn-outline-primary">  <i class="fa fa-pen"></i> Yeni Adres Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<script>
    function DeleteFooterAddress(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            html: "Kaydı Silmek İstediğinizden Emninmisiniz?<br><br><small><b>Bu işlem geri alınamaz</b></small>",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/FooterAddress/RemoveFooterAddress/" + id;
            }
        });

    }
</script>


