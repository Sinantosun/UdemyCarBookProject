@model List<ResultAllBlogsWithAuthorDto>

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Son Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">
             Yazarlarımız son 5 listesi
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tbody>
                        <tr>
                            <th>Blog Başlığı</th>
                            <th>Yazar</th>
         
                            <th>Bloğu Aç</th>
                        </tr>
                        @foreach (var item in Model)
                        {
   
                            <tr>
 
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.title</h5>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.authorName</h5>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal"><a href="/Blog/BlogDetail/@item.blogId" target="_blank" class="btn btn-outline-primary">Bloğu Aç</a></h5>
                                </td>
                            </tr>
                        }




                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div> 