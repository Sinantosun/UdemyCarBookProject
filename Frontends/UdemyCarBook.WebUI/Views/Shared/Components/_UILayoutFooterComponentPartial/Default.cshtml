            swal("Çerez Politikası", "Sizlere daha iyi hizmet sunabilmek adına tarayıcı çerezlerini kullanmaktayız");

        });
        $("#btn4").click(function () {
            swal("Sıkça Sorulan Sorular", "Sistem ile ilgili sık sorulan sorular yer alır.");
        });
        $("#btn5").click(function () {
            swal("Ödeme Yöntemleri", "Ödeme işlemleri yalnızca fiziki lokasyonlarımızdaki kiralama noktalarında kart ile yapılmaktadır ");

        });
        $("#btn6").click(function () {
            swal("Nasıl Çalışır?", "1.Adım Aracınızı Kiralayın \n 2.Adım Mailinizi Kontrol Edin\n 3. Adım Ofisimize Gelin");

        });
    });

