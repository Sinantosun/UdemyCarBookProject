
<div class="comment-form-wrap pt-5" id="comment">
    <h3 class="mb-5">Bir yorum yapın</h3>
    <form method="post" asp-action="CreateComment" asp-controller="Comment" class="p-5 bg-light">
        <input type="hidden" name="BlogId" value="@ViewBag.blogid" />
        <div class="form-group">
            <label for="name">Adınız Soyadınz *</label>
            <input type="text" class="form-control"  name="Name" id="name">
        </div>
        <div class="form-group">
            <label for="name">Email Adresiniz *</label>
            <input type="text" class="form-control" name="Email" id="Email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunz * </label>
            <textarea name="CommentContent" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>