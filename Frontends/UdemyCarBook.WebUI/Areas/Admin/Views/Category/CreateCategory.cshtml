@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Blog Kategorisi Girişi</h4>
                <p class="card-subtitle mb-4">Kategori alanına veri girişini aşağıdaki panelden yapabilirsiniz.</p>
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputName">Kategori Adı</label>
                        <input type="text" class="form-control" id="exampleInputName" asp-for="CategoryName" placeholder="Kategori adını Giriniz">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
